<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <listener>
        <listener-class>listener.StarUpListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>TasksInformationServlet</servlet-name>
        <servlet-class>servlets.TasksInformationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TasksInformationServlet</servlet-name>
        <url-pattern>/tasks</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateTaskServlet</servlet-name>
        <servlet-class>servlets.CreateTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateTaskServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TaskInformationServlet</servlet-name>
        <servlet-class>servlets.TaskInformationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskInformationServlet</servlet-name>
        <url-pattern>/task</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AuthorizationServlet</servlet-name>
        <servlet-class>servlets.AuthorizationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthorizationServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <servlet-class>servlets.DeleteTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdatePageServlet</servlet-name>
        <servlet-class>servlets.UpdatePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdatePageServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SetChangeServlet</servlet-name>
        <servlet-class>servlets.SetChangeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetChangeServlet</servlet-name>
        <url-pattern>/change</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangeTimeServlet</servlet-name>
        <servlet-class>servlets.ChangeTimeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeTimeServlet</servlet-name>
        <url-pattern>/changeTime</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateTriggerServlet</servlet-name>
        <servlet-class>servlets.CreateTriggerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateTriggerServlet</servlet-name>
        <url-pattern>/createTrig</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UnlockTaskServlet</servlet-name>
        <servlet-class>servlets.UnlockTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnlockTaskServlet</servlet-name>
        <url-pattern>/unlock</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateGroup</servlet-name>
        <servlet-class>servlets.CreateGroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateGroup</servlet-name>
        <url-pattern>/group</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NotificationTime</servlet-name>
        <servlet-class>servlets.NotificationTimeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NotificationTime</servlet-name>
        <url-pattern>/time</url-pattern>
    </servlet-mapping>
</web-app>